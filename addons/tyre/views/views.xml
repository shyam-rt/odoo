<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tyre.list">
      <field name="name">tyre list</field>
      <field name="model">tyre.tyre</field>
      <field name="arch" type="xml">
        <tree>
          <field name="tyre_name"/>
          <field name="tyre_type"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tyre.action_window">
      <field name="name">tyre window</field>
      <field name="res_model">tyre.tyre</field>
      <field name="view_mode">tree,form</field>
    </record>


